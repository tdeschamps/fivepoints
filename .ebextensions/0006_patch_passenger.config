commands:
  create_post_dir:
    command: "mkdir /opt/elasticbeanstalk/hooks/appdeploy/post"
    ignoreErrors: true
  remove cors_conf:
    command: "rm /etc/nginx/conf.d/cors.conf"
    ingnoreErrors: true  
files:
  "/etc/nginx/conf.d/httpd.conf":
    mode: '000755'
    content: |
      location / {
        if ($filename ~* ^.*?\.(eot)|(ttf)|(woff)$){
          add_header Access-Control-Allow-Origin *;
        }
      }
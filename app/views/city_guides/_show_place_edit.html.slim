li.item.col-xs-12.col-sm-6.col-md-4 data-item-id = (city_guide_place.id if city_guide_place || 0)
	- if place.foursquare_picture_url || city_guide_place.uploaded_files.first
		.tile-place.row-space-4 style=("background-image: url('#{place.foursquare_picture_url}');")
			.cityguide-tile 
				.vertical-middle
					h2 #{place.name}
	- else
		.tile-place.row-space-4
			.cityguide-tile data-item-id = (city_guide_place.id if city_guide_place || 0)
				.vertical-middle
					h2 #{place.name}					 	
				
li.item.col-xs-12.col-lg-6
	.BlackBook-card.row-space-8.cornered-top
		- if place.foursquare_picture_url || black_book_place.uploaded_files.first
			.tile-place.cornered-top style=("background-image: url('#{ place.foursquare_picture_url}');")
			.BlackBookplace-infos
				= render partial: "./shared/foursquare_attribution" if place.foursquare_id
				h1 #{place.name}
				.col-xs-12
					- @attributes.each do |a|
						- if (!place[a].nil? && place[a] != "")
							.attributes
								strong #{a.capitalize}: 
								p   #{place[a]}

		- else
			.tile-place.cornered-top
				.BlackBook-tile
			.BlackBookplace-infos
				= render partial: "./shared/foursquare_attribution" if place.foursquare_id
				h1 #{place.name}
				.col-xs-12
					- @attributes.each do |a|
						- if (!place[a].nil? && place[a] != "" )
							.attributes
								strong #{a.capitalize}: 
								p   #{place[a]}


					 	
				